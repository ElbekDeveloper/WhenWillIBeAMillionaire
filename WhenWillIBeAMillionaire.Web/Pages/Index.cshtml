@page "/"

@functions{
    int moneySaved = 50000;
    decimal howMuchToSave = 0;
    int age = 20;
    int millionaireAge = 35;
    string result = "$0.00/mo";

    void calc()
    {
        decimal moneyLeft = 1000000 - moneySaved;
        if (moneyLeft < 0)
        {
            result = "You're already a millionaire, good job!";
        }
        else
        {
            howMuchToSave = moneyLeft / (12 * (millionaireAge - age));
            result = $"${Math.Round(howMuchToSave, 0)}/mo";
        }
    }
}

<div class="center">
    <label>How much money have you saved?</label>
    <div class="form-group">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">$</span>
            </div>
            <input type="number" class="form-control" aria-label="Amount (to the nearest dollar)" bind="moneySaved" />
            <div class="input-group-append">
                <span class="input-group-text">.00</span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label>How old are you?</label>
        <input type="number" class="form-control" bind="age" />
    </div>
    <div class="form-group">
        <label>At what age would you like to become a millionaire?</label>
        <input type="number" class="form-control" bind="millionaireAge" />
    </div>
    <div class="form-group">
        <button class="form-control btn btn-primary" onclick="@calc">Run the Numbers!</button>
    </div>
    <div class="form-group">
        <p align="center" style="font-size:xx-large; color:green">@result</p>
    </div>
</div>

<div align="center" class="form-group">
    <p class="form-group">
        Developed with 💗 by <a href="https://www.hassanhabib.com">Hassan Habib</a>
    </p>
</div>